<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@color/white">
    
  <!-- <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/LabelText" android:textColor="#000000" android:textStyle="bold" android:text="" android:layout_gravity="center_horizontal"></TextView>
   -->
    <Button android:layout_width="350sp" android:layout_gravity="center_horizontal" android:id="@+id/Button01" android:layout_weight="0" android:textSize="20sp" android:text="Hold and Speak" android:layout_height="80sp"></Button>

<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/PerformanceText" android:text="@string/performance_text" android:layout_gravity="center_horizontal"></TextView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/WhichPass" android:textSize="20sp" android:textStyle="bold" android:textColor="#ff3300" android:layout_gravity="center_horizontal"></TextView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/SayWords" android:text="say Words" android:layout_gravity="center_horizontal"></TextView>
<EditText android:contentDescription="Words" android:drawSelectorOnTop="true" android:gravity="left|top" android:id="@+id/EditText01" android:textSize="20dip" android:text="For more information about this demo
\n\n consult Help on the Menu" android:layout_width="fill_parent" android:layout_height="150dip" android:textAppearance="@+id/EditText01" android:autoText="false" android:hint="improved hypothesis appears here" ></EditText>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/SayNumbers" android:text="say Number" android:layout_gravity="center_horizontal"></TextView>
<EditText android:contentDescription="Numbers" android:drawSelectorOnTop="true" android:gravity="left|top" android:id="@+id/EditText02" android:textSize="22dip" android:text="" android:layout_width="fill_parent" android:layout_height="50dip" android:textAppearance="@+id/EditText02" android:autoText="false" android:hint="improved hypothesis appears here" ></EditText>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/SayDigits" android:text="say a Digit" android:layout_gravity="center_horizontal"></TextView>
<EditText android:contentDescription="Digits" android:drawSelectorOnTop="true" android:gravity="left|top" android:id="@+id/EditText03" android:textSize="22dip" android:text="" android:layout_width="fill_parent" android:layout_height="50dip" android:textAppearance="@+id/EditText03" android:autoText="false" android:hint="improved hypothesis appears here" ></EditText>


</LinearLayout>
