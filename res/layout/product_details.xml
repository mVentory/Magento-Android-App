<?xml version="1.0" encoding="utf-8"?>
<com.mageventory.components.ProductDetailsScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:id="@+id/detailsMainLL">

       <RelativeLayout
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button android:id="@+id/menuButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@android:drawable/ic_menu_more"/>  
          
        <TextView
            android:id="@+id/product_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="left"
            android:layout_toLeftOf="@id/menuButton"/> 
               
       </RelativeLayout>      
        
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

            <TextView
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:gravity="center"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="@string/price"/>
            
            <TextView
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:gravity="center"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="@string/quantity"/>
            
            <TextView
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:gravity="center"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="@string/total"/>
            
            
        </LinearLayout>
        
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

   		     <TextView
        	    android:id="@+id/product_price_input"
            	android:layout_width="0dp"
           		android:layout_height="fill_parent"
           		android:layout_weight="0.4"
           		android:gravity="center"
           		android:textAppearance="@android:style/TextAppearance.Medium"/>

   		    
        	 <TextView
           		android:id="@+id/quantity_input"
            	android:layout_width="0dp"
           		android:layout_height="fill_parent"
           		android:layout_weight="0.4"
            	android:gravity="center"
           		android:textAppearance="@android:style/TextAppearance.Medium"/>
   		     
   		
        	 <TextView
           		android:id="@+id/total_input"
            	android:layout_width="0dp"
           		android:layout_height="fill_parent"
           		android:layout_weight="0.4"
				android:gravity="center"
           		android:textAppearance="@android:style/TextAppearance.Medium"/>

   		                       
        </LinearLayout>
                
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

            <EditText
                android:id="@+id/button"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:hint="Sold Price"
                android:inputType="number"
                android:textAppearance="@android:style/TextAppearance.Medium"/>
            
            <EditText
                android:id="@+id/qtyText"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:hint="Qty"
                android:inputType="number"
                android:text="@string/quantityDefault"                
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <EditText
                android:id="@+id/totalText"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:hint="Total"
                android:inputType="number"
                android:text="@string/quantityDefault"                
                android:textAppearance="@android:style/TextAppearance.Medium"/>
            
             
        </LinearLayout>
        
      <Button
            android:id="@+id/soldButton"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:text="@string/sold"
            android:textAppearance="@android:style/TextAppearance.Medium"/>
    
      <ProgressBar
                android:id="@+id/productLoadingProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center" android:indeterminate="true"
                android:visibility="visible"/>
                  
      <RelativeLayout 
        	android:layout_width="match_parent"
			android:layout_height="wrap_content"
        	android:orientation="horizontal">
            
        	<TextView
        	    android:id="@+id/category_label"
        	    android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
           		android:text="@string/category"
           		android:textStyle="bold"
           	 	android:textAppearance="@android:style/TextAppearance.Medium"/>

        	<TextView
        	    android:layout_alignParentTop="true"
        	    android:layout_alignParentRight="true"
            	android:id="@+id/product_categories"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:gravity="left"
            	android:layout_toRightOf="@id/category_label"
            	android:textStyle="normal"
            	android:textAppearance="@android:style/TextAppearance.Medium"
            	android:layout_marginLeft="5dp"/>
            
        </RelativeLayout>
      
      
    	<LinearLayout android:orientation="horizontal"
          			android:layout_width="fill_parent"
          			android:layout_height="wrap_content">
            
          	<TextView android:text="@string/details_sku_text"
          			android:layout_width="wrap_content"
          			android:layout_height="wrap_content"
          			android:layout_marginRight="20dp"
          			android:textAppearance="@android:style/TextAppearance.Medium"/>
          
          	<TextView android:id="@+id/details_sku"
          			android:layout_width="wrap_content"
          			android:layout_height="wrap_content"          			
          			android:textAppearance="@android:style/TextAppearance.Medium"/>
          
          
      	</LinearLayout>
    
      
        <TextView
            android:id="@+id/product_description_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textAppearance="@android:style/TextAppearance.Small"/>
        
  
        <LinearLayout
            android:layout_width="match_parent"
			android:layout_height="wrap_content"
        	android:orientation="horizontal">
        
        	<CheckBox
        	    android:id="@+id/enabledCheckBox"
        	    android:layout_width="wrap_content"
        	    android:layout_height="match_parent" 
        	    android:checked="false"
        	    android:clickable="false"/>
        	    
        	<TextView
        	    android:id="@+id/enabledTextView"
        	    android:text="@string/enabled"
        	    android:layout_width="wrap_content"
        	    android:layout_height="match_parent"
        	    android:textAppearance="@android:style/TextAppearance.Medium"
                android:gravity="center"/>
        	    
        	<TextView 
        	    android:id="@+id/weigthTextView"
        	    android:text="@string/weight"
        	    android:layout_width="wrap_content"
        	    android:layout_height="match_parent"
        	    android:layout_weight="0.4"        	    
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:gravity="center"/>
        	    
        <TextView 
        	    android:id="@+id/weigthOutputTextView"
        	    android:layout_width="wrap_content"        	    
        	    android:layout_height="match_parent"
        	    android:layout_weight="0.4"        	    
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:gravity="left|center_vertical"/>
        	
        
        </LinearLayout>
    
    
        <View android:layout_height="5dp"
    		  android:layout_width="match_parent"
    		  android:background="#90909090"/>
        
        <LinearLayout
            android:id="@+id/details_attr_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
           
        
        <View android:layout_height="5dp"
    		  android:layout_width="match_parent"
    		  android:background="#90909090"/>
    
                
        <Button
            android:id="@+id/update_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update product"
            android:layout_marginTop="10dp"
			android:visibility="gone"
            />

        
        
        
        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="right">

                <Button
                    android:id="@+id/photoShootBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photo shoot" android:onClick="@string/onClick"/>

            </LinearLayout>
            
            <ProgressBar
                android:id="@+id/imagesLoadingProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center" android:indeterminate="true"/>

            <LinearLayout
                android:id="@+id/imagesLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <Button
                android:id="@+id/addImageSecondBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_image" android:layout_gravity="right" android:onClick="@string/onClick" android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</com.mageventory.components.ProductDetailsScrollView>