<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

<ScrollView
    android:id="@+id/order_details_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:visibility="gone">
	
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    
        <LinearLayout
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:id="@+id/layoutCreationPending"
        android:visibility="gone">
        
        	<ProgressBar
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content" android:layout_gravity="center" android:indeterminate="true"
        	style="@android:style/Widget.ProgressBar.Small"
        	android:layout_margin="10dp"
        	/>
        	
        	<TextView
            android:id="@+id/textCreationPending"  
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="Order creation pending..."
            android:layout_gravity="center_vertical"/> 
        	
       </LinearLayout>
        
        <LinearLayout
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:id="@+id/layoutShipmentPending"
        android:visibility="gone">
        
        	<ProgressBar
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content" android:layout_gravity="center" android:indeterminate="true"
        	style="@android:style/Widget.ProgressBar.Small"
        	android:layout_margin="10dp"
        	/>
        	
        	<TextView
            android:id="@+id/textShipmentPending"  
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="Shipment creation pending (1)..."
            android:layout_gravity="center_vertical"/> 
        	
       </LinearLayout>
       
        <LinearLayout
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:id="@+id/layoutShipmentFailed"
        android:visibility="gone">
        
        	<ProgressBar
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content" android:layout_gravity="center" android:indeterminate="true"
        	style="@android:style/Widget.ProgressBar.Small"
        	android:layout_margin="10dp"
        	android:visibility="gone"
        	/>
        	
        	<TextView
            android:id="@+id/textShipmentFailed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="Shipment creation failed (1)..."
            android:layout_gravity="center_vertical"/> 
        	
       </LinearLayout>
    
        <LinearLayout 
	        android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal">
	    <com.mageventory.components.LinkTextView 
			android:textColor="#AAAAAA"
        	android:id="@+id/order_num_text"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="---"
        	android:textSize="20sp"
        	android:textIsSelectable="true"/>
	    <TextView
			android:textColor="#AAAAAA"
          	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text=", "
        	android:textSize="20sp"
        	android:textIsSelectable="true"/>
	    <TextView
			android:textColor="#AAAAAA"
        	android:id="@+id/order_date_text"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="---"
        	android:textSize="20sp"
        	android:textIsSelectable="true"/>
	    </LinearLayout>

        <LinearLayout 
	        android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal">
	    <TextView
			android:textColor="#AAAAAA"
        	android:id="@+id/status_text"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="---"
        	android:textSize="20sp"
        	android:textIsSelectable="true"/>
	    </LinearLayout>
	    
        <LinearLayout 
	        android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal">
    	<LinearLayout
	        android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical">
	    <com.mageventory.components.LinkTextView
			android:textColor="#AAAAAA"
        	android:id="@+id/customer_name_text"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="---"
        	android:textSize="20sp"
        	android:textIsSelectable="true"/>
	    <com.mageventory.components.LinkTextView
			android:textColor="#AAAAAA"
        	android:id="@+id/customer_email_text"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="---"
        	android:textSize="15sp"
        	android:textIsSelectable="true"/>
        </LinearLayout>
	    </LinearLayout>
        
        <LinearLayout
	        android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical"
        	android:id="@+id/more_details_layout">
	    </LinearLayout>
        
        <View android:layout_height="10dp"
    	    android:layout_width="match_parent"/>
        
        <View android:layout_height="5dp"
    	    android:layout_width="match_parent"
    		android:background="#90909090"/>
        
        <RelativeLayout 
	        android:layout_width="match_parent"
        	android:layout_height="wrap_content">
        
        <TextView
	    	android:textColor="@android:color/white"
	        android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Raw dump"
        	android:textSize="20sp"
        	android:layout_alignParentLeft="true"/>
        
        <LinearLayout 
	        android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:layout_alignParentRight="true">
        
        <Button
            android:id="@+id/raw_dump_button_show"
	        android:layout_width="80dp"
        	android:layout_height="wrap_content"
        	android:text="Show"/>
        <Button
            android:id="@+id/raw_dump_button_hide"
            android:layout_width="80dp"
        	android:layout_height="wrap_content"
        	android:text="Hide"
        	android:enabled="false"/>
        </LinearLayout>
        
        </RelativeLayout>
        
        <View android:layout_height="5dp"
    	    android:layout_width="match_parent"
    		android:background="#90909090"/>
        
        
        
        <LinearLayout
	        android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical"
        	android:id="@+id/raw_dump_layout"
        	android:visibility="gone">
	    </LinearLayout>

        
	</LinearLayout>

</ScrollView>    
    	
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/spinning_wheel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ProgressBar
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        />
        	
		<TextView
			android:layout_marginTop="5dp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Loading order details..."
        	android:textColor="@android:color/white"
        	android:textSize="20sp"
       	/>
		
	</LinearLayout>

</LinearLayout>

