<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        android:text="Use Menu Button for Navigation"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/linearLayoutUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop URL: "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/config_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Config"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearLayoutUrl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" >

    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="50dp">
        
	    <Button
	        android:id="@+id/settingsButton"
	        android:layout_width="100dp"
	        android:layout_height="80dp"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="10dp"
	        android:onClick="onResourceStateButtonClick"
	        android:text="@string/settings"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentLeft="true"/>
	</RelativeLayout>
	    
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="50dp">
    	    
		<Button
		    android:id="@+id/queueButton"
		    android:layout_width="100dp"
		    android:layout_height="80dp"
		    android:layout_gravity="center_horizontal"
		    android:layout_marginTop="10dp"
		    android:onClick="onResourceStateButtonClick"
		    android:text="@string/queue"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentRight="true"/>
    </RelativeLayout> 
    </LinearLayout>

    <CheckBox
        	android:id="@+id/external_photos_checkbox"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/external_photos">
 	</CheckBox>
    
    <View
        android:layout_height="2dip"
        android:layout_width="match_parent"
        android:background="#FF909090" />
       
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_gravity="center_horizontal">
    
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_margin="10dp">   
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textStyle="bold"
        android:text="Job type"/>
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="New prod."/>
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="Photo"/>  
    <TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="Edit"/>
    <TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="Sell"/>          
       
	</LinearLayout>
	
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_margin="10dp">   
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="Pending"
        android:textStyle="bold"
        />
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/new_prod_pending"/>
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/photos_pending"/>  
    <TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/edit_pending"/>
    <TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/sell_pending"/>               
	</LinearLayout>
	
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_margin="10dp">   
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="Failed"
        android:textStyle="bold"
        />
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/new_prod_failed"/>
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/photos_failed"/>  
    <TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/edit_failed"/>
    <TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/sell_failed"/>        
	</LinearLayout>		
	
    </LinearLayout>
    
    <View
        android:layout_height="2dip"
        android:layout_width="match_parent"
        android:background="#FF909090" />
    
</LinearLayout>