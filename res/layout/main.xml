<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
    android:id="@+id/mainContent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        android:text="Use Menu Button for Navigation"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/linearLayoutUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop URL: "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.mageventory.components.LinkTextView
            android:id="@+id/config_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Config"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" >
        
    <Button
        android:id="@+id/settingsButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:text="@string/settings"
        />
    	    
	<Button
	    android:id="@+id/queueButton"
	    android:layout_width="0dp"
	    android:layout_height="80dp"
	    android:layout_weight="1"
	    android:text="@string/queue"
        />
 
	<Button
	    android:id="@+id/errorReportingButton"
	    android:layout_width="0dp"
	    android:layout_height="80dp"
	    android:layout_weight="1"
	    android:text="@string/report_errors"
        />
	
    </LinearLayout>
   
    <View
        android:layout_height="2dip"
        android:layout_width="match_parent"
        android:background="#FF909090" />
       
    <LinearLayout
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_gravity="center_horizontal">
    
	<LinearLayout
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_margin="5dp">   
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textStyle="bold"
        android:text="New"
        android:layout_gravity="center_horizontal"/>
	
	 <TextView
	    android:id="@+id/newJobStats"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="2/2"
        android:layout_gravity="center_horizontal"/>
	</LinearLayout>
	
	
	<LinearLayout
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_margin="5dp">   
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textStyle="bold"
        android:text="Pic"
        android:layout_gravity="center_horizontal"/>
	
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="2/2"
        android:id="@+id/photoJobStats"
        android:layout_gravity="center_horizontal"/>
	</LinearLayout>
	
	
	<LinearLayout
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_margin="5dp">   
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textStyle="bold"
        android:text="Edit"
        android:layout_gravity="center_horizontal"/>
	
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="2/2"
        android:id="@+id/editJobStats"
        android:layout_gravity="center_horizontal"/>
	</LinearLayout>
	
	
	<LinearLayout
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_margin="5dp">   
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textStyle="bold"
        android:text="Sale"
        android:layout_gravity="center_horizontal"/>
	
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="2/2"
        android:id="@+id/saleJobStats"
        android:layout_gravity="center_horizontal"/>
	</LinearLayout>
	
	<LinearLayout
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_margin="5dp">   
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textStyle="bold"
        android:text="Other"
        android:layout_gravity="center_horizontal"/>
	
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/otherJobStats"
        android:layout_gravity="center_horizontal"/>
	</LinearLayout>
	
	</LinearLayout>
    
    <View
        android:layout_height="2dip"
        android:layout_width="match_parent"
        android:background="#FF909090" />
    
    <LinearLayout
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_gravity="center_horizontal">
    
    <TextView
        android:layout_margin="5dp"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="Service status:"/>
    
    <TextView
        android:layout_margin="5dp"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="RUNNING"
        android:id="@+id/service_status"/>
    
    </LinearLayout>

    <View
        android:layout_height="2dip"
        android:layout_width="match_parent"
        android:background="#FF909090" />
       
     

     
     
     
     
     
     
     
     
    <LinearLayout
        android:id="@+id/statisticsLayout"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_gravity="center_horizontal">
    
	<LinearLayout
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_margin="5dp">   
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textStyle="bold"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:textSize="11dp"/>
	
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textStyle="bold"
        android:text="Sales"
        android:layout_gravity="right"
        android:textSize="11dp"/>
	
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textStyle="bold"
        android:text="Stock"
        android:layout_gravity="right"
        android:textSize="11dp"/>
	
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textStyle="bold"
        android:text="Qty"
        android:layout_gravity="right"
        android:textSize="11dp"/>
	 
	</LinearLayout>
	
	
	<LinearLayout
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_margin="5dp">   
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textStyle="bold"
        android:text="Today"
        android:layout_gravity="center_horizontal"
        android:textSize="11dp"/>
	
	<TextView
	    android:id="@+id/salesToday"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="$0"
        android:layout_gravity="right"
        android:textSize="11dp"/>
	
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="right"
        android:textSize="11dp"/>
	
	<TextView
	    android:id="@+id/dayLoaded"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="0"
        android:layout_gravity="right"
        android:textSize="11dp"/>
	
	</LinearLayout>
	
	
	<LinearLayout
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_margin="5dp">   
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textStyle="bold"
        android:text="Week"
        android:layout_gravity="center_horizontal"
        android:textSize="11dp"/>
	
	<TextView
	    android:id="@+id/salesWeek"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="$0"
        android:layout_gravity="right"
        android:textSize="11dp"/>
	
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="right"
        android:textSize="11dp"/>
	
	<TextView
	    android:id="@+id/weekLoaded"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="0"
        android:layout_gravity="right"
        android:textSize="11dp"/>
	</LinearLayout>
	
	
	<LinearLayout
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_margin="5dp">   
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textStyle="bold"
        android:text="Month"
        android:layout_gravity="center_horizontal"
        android:textSize="11dp"/>
	
	<TextView
  	    android:id="@+id/salesMonth"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="$0"
        android:layout_gravity="right"
        android:textSize="11dp"/>
	
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="right"
        android:textSize="11dp"/>
	
	<TextView
	    android:id="@+id/monthLoaded"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="0"
        android:layout_gravity="right"
        android:textSize="11dp"/>
	</LinearLayout>
	
	<LinearLayout
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_margin="5dp">   
	<TextView
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textStyle="bold"
        android:text="Total"
        android:layout_gravity="center_horizontal"
        android:textSize="11dp"/>
	
	<TextView
  	    android:id="@+id/salesTotal"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="$0"
        android:layout_gravity="right"
        android:textSize="11dp"/>

	<TextView
	    android:id="@+id/stockValue"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="$0"
        android:layout_gravity="right"
        android:textSize="11dp"/>
		
	<TextView
	    android:id="@+id/stockQty"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="0"
        android:layout_gravity="right"
        android:textSize="11dp"/>
	
	</LinearLayout>
	
	</LinearLayout>
     
     
     
     
     
    <LinearLayout
        android:id="@+id/statisticsLoadingProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_margin="5dp">

        <ProgressBar
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content" />
        	
		<TextView
			android:layout_marginTop="5dp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Loading statistics..."
        	android:textColor="@android:color/white"
        	android:textSize="20sp"
        	/>

	</LinearLayout>
	
    
    <LinearLayout
        android:id="@+id/statisticsLoadingFailed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_margin="5dp">
        	
		<TextView
			android:layout_marginTop="5dp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Could not load statistics..."
        	android:textColor="@android:color/white"
        	android:textSize="20sp"
        	/>

	</LinearLayout>
     
     
     
     <View
        android:layout_height="2dip"
        android:layout_width="match_parent"
        android:background="#FF909090" />     
     
     
     
     
     
     
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" >
    
    	<CheckBox
	        android:id="@+id/external_photos_checkbox"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/external_photos">
 		</CheckBox>

    	<CheckBox
    	    android:layout_marginLeft="20dp"
	        android:id="@+id/service_checkbox"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/service">
 		</CheckBox>
            
    </LinearLayout>
    
        <Button
            android:id="@+id/profilesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reports"
            android:layout_gravity="center_horizontal"
        />
    
    </LinearLayout>
    
    
     <LinearLayout
        android:id="@+id/errorReportingProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
	    android:visibility="gone">

        <ProgressBar
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content" />
        	
		<TextView
			android:layout_marginTop="5dp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Creating an error report..."
        	android:textColor="@android:color/white"
        	android:textSize="20sp"
        	/>

	</LinearLayout>
</LinearLayout>

</ScrollView>