<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newOptionDialog"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Copy photos:"
        android:textAppearance="?android:attr/textAppearanceMedium"
	/>
    
    <Spinner
    	android:id="@+id/copy_photos_spinner"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginBottom="10dp"/>
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Descrease the original quantity by:"
        android:textAppearance="?android:attr/textAppearanceMedium"
	/>
    
    <EditText
        android:id="@+id/decrease_qty_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:inputType="number"
        android:text="0"
        android:selectAllOnFocus="true"/>
    
    <CheckBox
	    android:id="@+id/edit_before_saving_checkbox"
     	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:text="Let me edit before saving"
       	android:layout_marginBottom="15dp"/>
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Tap and hold on DUPLICATE menu to make changes again."
        android:gravity="center_horizontal"
	/>
    
</LinearLayout>