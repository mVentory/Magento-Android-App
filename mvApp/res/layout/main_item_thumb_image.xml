<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/container_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/home_thumbnail_spacing" >

        <RelativeLayout
            android:id="@+id/background_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/home_thumb_unselected_border"
            android:padding="@dimen/home_thumbnail_border" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/selection_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/home_thumb_processed_overlay"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:duplicateParentState="true"
                    android:paddingBottom="5dip"
                    android:paddingRight="5dip"
                    android:src="@drawable/selected" />
            </RelativeLayout>

            <View
                android:id="@+id/detectedIndicator"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/red_circle"
                android:duplicateParentState="true"
                android:visibility="gone" />

            <View
                android:id="@+id/notAssignedIndicator"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/yellow_circle"
                android:duplicateParentState="true"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>