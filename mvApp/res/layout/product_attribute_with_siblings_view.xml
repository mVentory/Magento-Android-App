<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/attrDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/abs__spinner_ab_holo_dark"
        android:clickable="true"
        android:minHeight="48dip"
        android:orientation="horizontal" >

        <com.mageventory.components.LinkTextView
            android:id="@+id/attrLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:duplicateParentState="true"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <com.mageventory.components.LinkTextView
            android:id="@+id/attrValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:textAppearance="@android:style/TextAppearance.Medium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/siblingsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/product_attribute_value_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:duplicateParentState="true"
                android:gravity="center"
                android:text=""
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/product_price_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:duplicateParentState="true"
                android:gravity="center"
                android:text="@string/price"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/quantity_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:duplicateParentState="true"
                android:gravity="center"
                android:text="@string/quantity"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/total_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:duplicateParentState="true"
                android:gravity="center"
                android:text="@string/total"
                android:textAppearance="@android:style/TextAppearance.Medium" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/thumbnailViewValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>