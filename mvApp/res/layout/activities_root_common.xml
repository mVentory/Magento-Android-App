<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/reportErrorsBtn"
            style="@style/report_btn"
            android:drawableRight="@drawable/ic_err_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report_errors"
            android:paddingRight="10dip"
            android:paddingLeft="10dip"
            android:gravity="start|center" />
        
        <TextView
            android:id="@+id/versionName"
            style="@style/version_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:gravity="right"
            android:text="@string/version_name" />
<LinearLayout 
android:layout_width="240dp"
android:layout_height="wrap_content"
android:layout_gravity="start"
android:paddingLeft="10dip" >
        <TextView
            style="@style/help_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:text="@string/help_header"
            android:paddingLeft="10dip"
            android:paddingBottom="15dip"
            android:background="@drawable/help_tree_h" />
</LinearLayout>

        <ListView
            android:id="@+id/left_drawer"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/menu_background"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" />

        <ListView
            android:id="@+id/right_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:choiceMode="singleChoice"
            android:divider="@drawable/menu_splitter"
            android:dividerHeight="2dp"
            android:fadeScrollbars="false" />

        <FrameLayout
            android:id="@+id/show_more_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/menu_background"
            android:visibility="gone" >

            <FrameLayout
                android:id="@+id/show_more_control"
                android:layout_width="36sp"
                android:layout_height="18sp"
                android:layout_gravity="center"
                android:clickable="true"
                style="@style/showmore" >

                <include layout="@layout/slider_navigation_item_right" />
            </FrameLayout>
        </FrameLayout>
    </FrameLayout>

</merge>